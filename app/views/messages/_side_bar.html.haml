.sideBar
  .sideHeader
    .sideBox
      %p.sideBox__user-name
        = current_user.name
      %ul.sideBox__icon
        %li.sideBox__icon__list--edit
          = link_to new_group_path, class: "sideBox__icon__btn" do
            = icon('fas', 'edit', class: 'sideBox__icon__btn--edit')
        %li.sideBox__icon__list--cog
          = link_to edit_user_path(current_user), class: ".sideBox__icon__btn" do
            = icon('fas', 'cog', class: 'sideBox__icon__btn--cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#', class: "group-link" do
          .group-link__group-name
            =group.name
          .group-link__info
            ヴォエ