.message
  .message__label
    .message__label__user-name
      = message.user.name
    .message__label__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__content
    - if message.text.present?
      %p.message__content__text
        = message.text
    = image_tag message.image.url, class: 'message__content__image' if message.image.present?
